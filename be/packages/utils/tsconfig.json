{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "baseUrl": "./src",
    "resolveJsonModule": true,
    "strict": true,
    "noImplicitAny": false,
    "declaration": false,
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["src/**/*", "tests/**/*"],
  "exclude": []
}
